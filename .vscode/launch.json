  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (Web, Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      // "outFiles": [],
      // "perScriptSourcemaps": "yes",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "python3: http.server 8000 start"
    },
    {
      "name": "Launch (File, Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "file": "${workspaceFolder}/index.html"
    }
  ]
}
